{
  "name": "ds-e-commerce-backend",
  "version": "1.0.0",
  "description": "Production-ready E-commerce backend with Hono, Bun, and Drizzle ORM",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target node --minify --sourcemap",
    "build:production": "NODE_ENV=production bun run build",
    "start": "NODE_ENV=production bun run dist/index.js",
    "start:dev": "NODE_ENV=development bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:migrate:prod": "NODE_ENV=production bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run src/db/seed.ts",
    "clean": "rm -rf dist",
    "preinstall": "npx only-allow bun",
    "postinstall": "echo 'Dependencies installed successfully'",
    "ci": "bun run typecheck && bun run lint && bun run format:check",
    "release": "bun run clean && bun run ci && bun run build:production"
  },
  "keywords": [
    "ecommerce",
    "api",
    "backend",
    "hono",
    "bun",
    "drizzle",
    "typescript",
    "postgresql",
    "jwt",
    "rest-api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.3",
    "@neondatabase/serverless": "^0.9.4",
    "cloudinary": "^2.7.0",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.6.2",
    "nanoid": "^5.0.7",
    "nodemailer": "^7.0.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.28.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "bun-types": "^1.2.21",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohit-dsb/ds-e-commerce-backend.git"
  },
  "bugs": {
    "url": "https://github.com/mohit-dsb/ds-e-commerce-backend/issues"
  },
  "homepage": "https://github.com/mohit-dsb/ds-e-commerce-backend#readme"
}
